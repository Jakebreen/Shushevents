<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="-100dp"
        android:bottom="140dp"
        android:left="-200dp"
        android:right="-200dp">
        <rotate
            android:fromDegrees="0"
            android:pivotX="0%"
            android:pivotY="0%">
            <shape
                android:shape="oval">
                <gradient
                    android:angle="270"
                    android:endColor="#2BC0E4"
                    android:startColor="#EAECC6"
                    android:type="linear"/>
            </shape>
        </rotate>
    </item>
</layer-list>