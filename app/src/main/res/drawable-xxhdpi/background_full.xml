<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="0dp"
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp">
        <rotate
            android:fromDegrees="0"
            android:pivotX="0%"
            android:pivotY="0%">
            <shape
                android:shape="rectangle">
                <gradient
                    android:angle="270"
                    android:endColor="#2BC0E4"
                    android:startColor="#EAECC6"
                    android:type="linear"/>
            </shape>
        </rotate>
    </item>
</layer-list>